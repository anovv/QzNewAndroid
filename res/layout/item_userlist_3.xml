<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

	<View
    	android:layout_width="match_parent"
    	android:layout_height="1px"
    	android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp"
    	android:background="@color/light_gray_2"/>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:background="@drawable/card_go_bot"
	    android:orientation="horizontal">
	    
	    <ImageView
	    	android:id="@+id/item_userlist_imageview"
	    	android:layout_width="50dp"
	    	android:layout_height="50dp"
	    	android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	    	android:background="@drawable/no_profile"/>
	    
	    <TextView 
	        android:id="@+id/item_userlist_name_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:paddingLeft="10dp"
	        android:textSize="15sp"
	        android:textColor="@color/Gray"
	        android:layout_toRightOf="@+id/item_userlist_imageview"/>
	    
	</RelativeLayout>
</LinearLayout>

