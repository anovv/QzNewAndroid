<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">
            
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/card_go">
		
        <TextView
            android:id="@+id/item_purchase_name_textview"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingTop="5dp"
		    android:paddingLeft="10dp"
		    android:layout_alignParentLeft="true"
		    android:textSize="18sp"
		    android:gravity="center"/>
        
        <ImageView
            android:id="@+id/item_purchase_imageview"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:padding="10dp"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:background="@drawable/icon_lock"/>
        
        <TextView
            android:id="@+id/item_purchase_description_textview"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingTop="2dp"
		    android:paddingBottom="5dp"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:textColor="@color/Gray"
		    android:layout_toLeftOf="@id/item_purchase_imageview"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@id/item_purchase_name_textview"
		    android:textSize="12sp"/>
        
    </RelativeLayout>
</FrameLayout>
