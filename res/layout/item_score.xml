<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp" 
    android:paddingRight="10dp" >
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:background="@drawable/card_cus"
	    android:orientation="horizontal">
	   
	    <ImageView
	        android:id="@+id/item_score_imageview"
	        android:layout_width="50dp"
	 	    android:layout_height="50dp"
		    android:layout_alignParentLeft="true"
	 	    android:layout_centerVertical="true"
	    	android:background="@drawable/no_profile"/>
	   
	   <TextView 
	        android:id="@+id/item_score_name_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:paddingLeft="10dp"
	        android:textColor="@color/Gray"
	        android:textSize="13sp"
	        android:layout_toRightOf="@+id/item_score_imageview"/>
	   
	   <TextView 
	        android:id="@+id/item_score_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:paddingRight="5dp"
	        android:textSize="14sp"
	        android:textColor="@color/dark_gray"
	   	    android:layout_alignParentRight="true"
	        android:textStyle="bold"
	        android:typeface="sans" />
	   
	 </RelativeLayout>
</FrameLayout>
