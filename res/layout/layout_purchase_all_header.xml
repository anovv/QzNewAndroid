<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
	<LinearLayout 
	    android:id="@+id/layout_purchase_all_view"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:id="@+id/layout_purchase_all_title_textview"
	        android:textSize="20sp"	
	        android:gravity="center"
	        android:layout_margin="20dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/all_title"/>
	    
		<FrameLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:paddingBottom="10dp">
		            
		    <RelativeLayout
		        android:id="@+id/layout_purchase_all_button_view"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/card_teal">
				
		        <TextView
		            android:id="@+id/layout_purchase_all_textview"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:paddingLeft="10dp"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:textSize="18sp"
				    android:textColor="@color/White"
				    android:text="@string/all_button"
				    android:gravity="center"/>
		        
		        <ImageView
		            android:id="@+id/layout_purchase_all_imageview"
				    android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:layout_marginTop="12dp"
				    android:layout_marginBottom="12dp"
				    android:padding="10dp"
				    android:layout_alignParentRight="true"
				    android:layout_centerVertical="true"
				    android:background="@drawable/icon_lock_light"/>
		        
		    </RelativeLayout>
		</FrameLayout>
		    
	</LinearLayout>
</FrameLayout>
