<?xml version="1.0" encoding="utf-8"?>   
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal">
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp">
	    
	    <FrameLayout
	        android:id="@+id/activity_game_final_images_view"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent">
	    
		    <ImageView
		        android:id="@+id/activity_game_final_user_imageview"
			    android:layout_width="50dp"
			    android:layout_height="50dp"
			    android:background="@drawable/img_bg"
			    android:layout_gravity="left|top"/>
		    
		    <ImageView
		        android:id="@+id/activity_game_final_ruser_imageview"
			    android:layout_width="50dp"
			    android:layout_height="50dp"
			    android:background="@drawable/img_bg"
			    android:layout_gravity="right|top"/>
	    </FrameLayout>
	    
	    <LinearLayout
	        android:id="@+id/activity_game_final_names_view"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:layout_below="@id/activity_game_final_images_view"
		    android:orientation="horizontal">
	    
		    <TextView
		        android:id="@+id/activity_game_final_user_name_textview"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:gravity="center"
			    android:textColor="@color/White"
			    android:textSize="15sp"
			    android:visibility="invisible"/>
		    
		    <TextView
		        android:id="@+id/activity_game_final_ruser_name_textview"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:gravity="center"
			    android:textColor="@color/White"
			    android:textSize="15sp"
			    android:visibility="invisible"/>
	    </LinearLayout>
	    
	    
	    <LinearLayout
	        android:id="@+id/activity_game_final_scores_view"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:layout_below="@id/activity_game_final_names_view"
		    android:orientation="horizontal">
		    
		    <TextView
		        android:id="@+id/activity_game_final_user_score_textview"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:padding="5dp"
			    android:gravity="center"
			    android:textColor="@color/White"
			    android:textSize="15sp"
			    android:visibility="invisible"/>
		    
		    <TextView
		        android:id="@+id/activity_game_final_ruser_score_textview"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:padding="5dp"
			    android:gravity="center"
			    android:textColor="@color/White"
			    android:textSize="15sp"
			    android:visibility="invisible"/>
		    
		</LinearLayout>
	    
	    <TextView
	        android:id="@+id/activity_game_final_result_textview"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textColor="@color/White"
		    android:gravity="center"
	    	android:layout_marginTop="5dp"
		    android:textSize="30sp"
		    android:layout_below="@id/activity_game_final_scores_view"
			android:visibility="invisible"/>
	    
	    <FrameLayout
	        android:id="@+id/activity_game_final_result_view_frame"
		    android:layout_below="@id/activity_game_final_result_textview"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
	    
		    <LinearLayout
		        android:id="@+id/activity_game_final_result_view"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
		    
			    <FrameLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_weight="1">
				    
			        <LinearLayout
					    android:layout_width="140dp"
					    android:layout_height="wrap_content"
					    android:layout_gravity="right"
					    android:orientation="vertical">
					    
					    <TextView
					        android:id="@+id/activity_game_final_score_textview"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:textColor="@color/White"
						    android:layout_gravity="left"
					    	android:layout_marginTop="4dp"
					    	android:layout_marginLeft="20dp"
					    	android:layout_marginRight="20dp"
					    	android:visibility="invisible"
						    android:text="@string/score_dots"
						    android:textSize="15sp"/>
					    
					    <TextView
					        android:id="@+id/activity_game_final_winbonus_textview"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:textColor="@color/White"
						    android:layout_gravity="left"
					    	android:layout_marginTop="4dp"
					    	android:layout_marginLeft="20dp"
					    	android:layout_marginRight="20dp"
					    	android:visibility="invisible"
						    android:text="@string/win_bonus_dots"
						    android:textSize="15sp"/>
					    
					    <TextView
					        android:id="@+id/activity_game_final_mult_textview"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:textColor="@color/White"
						    android:layout_gravity="left"
					    	android:layout_marginTop="4dp"
					    	android:layout_marginLeft="20dp"
					    	android:layout_marginRight="20dp"
					    	android:visibility="invisible"
						    android:text="@string/booster_dots"
						    android:textSize="15sp"/>
					    
					    <TextView
					        android:id="@+id/activity_game_final_total_textview"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
					   		android:textColor="@color/White"
						    android:layout_gravity="left"
					    	android:layout_marginTop="4dp"
					    	android:layout_marginLeft="20dp"
					    	android:layout_marginRight="20dp"
					    	android:visibility="invisible"
						    android:text="@string/total_dots"
						    android:textSize="15sp"/>
					    
					    <TextView
					        android:id="@+id/activity_game_final_level_textview"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
					   		android:textColor="@color/White"
						    android:layout_gravity="left"
					    	android:layout_marginTop="4dp"
					    	android:layout_marginLeft="20dp"
					    	android:layout_marginRight="20dp"
					    	android:visibility="invisible"
						    android:text="@string/level_dots"
						    android:textSize="15sp"/>
					    
					    <TextView
					        android:id="@+id/activity_game_final_status_textview"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
					   		android:textColor="@color/White"
						    android:layout_gravity="left"
					    	android:layout_marginTop="4dp"
					    	android:layout_marginLeft="20dp"
					    	android:layout_marginRight="20dp"
					    	android:layout_marginBottom="7dp"
					    	android:visibility="invisible"
						    android:text="@string/status_dots"
						    android:textSize="15sp"/>
		    
					</LinearLayout>
				</FrameLayout>
			    
			    <FrameLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_weight="1">
				    
			        <LinearLayout
					    android:layout_width="140dp"
					    android:layout_height="wrap_content"
					    android:layout_gravity="left"
					    android:orientation="vertical">
					    
					    <TextView
					        android:id="@+id/activity_game_final_score_value_textview"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:textColor="@color/White"
						    android:layout_gravity="right"
					    	android:layout_marginTop="4dp"
					    	android:layout_marginLeft="20dp"
					    	android:layout_marginRight="20dp"
					    	android:visibility="invisible"
						    android:textSize="15sp"/>
					    
					    <TextView
					        android:id="@+id/activity_game_final_winbonus_value_textview"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:textColor="@color/White"
					    	android:layout_marginTop="4dp"
					    	android:layout_marginLeft="20dp"
					    	android:layout_marginRight="20dp"
					    	android:visibility="invisible"
						    android:layout_gravity="right"
						    android:textSize="15sp"/>
					    
					    <TextView
					        android:id="@+id/activity_game_final_mult_value_textview"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:textColor="@color/White"
					    	android:layout_marginTop="4dp"
					    	android:layout_marginLeft="20dp"
					    	android:layout_marginRight="20dp"
					    	android:visibility="invisible"
						    android:layout_gravity="right"
						    android:textSize="15sp"/>
					    
					    <TextView
					        android:id="@+id/activity_game_final_total_value_textview"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
					   		android:textColor="@color/White"
					    	android:layout_marginTop="4dp"
					    	android:layout_marginLeft="20dp"
					    	android:layout_marginRight="20dp"
					    	android:visibility="invisible"
						    android:layout_gravity="right"
						    android:text="@string/dots"
						    android:textSize="15sp"/>
					    
					    <TextView
					        android:id="@+id/activity_game_final_level_value_textview"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
					   		android:textColor="@color/White"
					    	android:layout_marginTop="4dp"
					    	android:layout_marginLeft="20dp"
					    	android:layout_marginRight="20dp"
					    	android:visibility="invisible"
						    android:layout_gravity="right"
						    android:text="@string/dots"
						    android:textSize="15sp"/>
					    
					    <TextView
					        android:id="@+id/activity_game_final_status_value_textview"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
					   		android:textColor="@color/White"
					    	android:layout_marginTop="4dp"
					    	android:layout_marginLeft="20dp"
					    	android:layout_marginRight="20dp"
					    	android:layout_marginBottom="4dp"
					    	android:visibility="invisible"
						    android:layout_gravity="right"
						    android:text="@string/dots"
						    android:textSize="15sp"/>
					    
			    	</LinearLayout>
			    </FrameLayout>
		    </LinearLayout>
		    
		    <TextView
		        android:id="@+id/activity_game_final_offline_textview"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
			   	android:textSize="16sp"
			   	android:textColor="@color/White"
			   	android:gravity="center"
			   	android:visibility="gone"/>
	    </FrameLayout>
	    
	    <LinearLayout
			android:layout_marginTop="10dp"
		    android:layout_width="260dp"
		    android:layout_centerHorizontal="true"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/activity_game_final_result_view_frame"
		    android:orientation="horizontal">
	    
		    <Button
		        android:id="@+id/activity_game_final_rematch_button"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:layout_margin="8dp"
			   	android:textColor="@color/Gray"
			   	android:textSize="14sp"
			   	android:background="@drawable/final_button"
			    android:gravity="center"
			    android:text="@string/rematch"
			    android:visibility="gone"/>
		    
		    <Button
		        android:id="@+id/activity_game_final_quit_button"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:layout_margin="8dp"
			   	android:textColor="@color/Gray"
			   	android:textSize="14sp"
			   	android:background="@drawable/final_button"
			    android:gravity="center"
			    android:text="@string/quit_short"
			    android:visibility="gone"/>
		    
		</LinearLayout>
	</RelativeLayout>

    <FrameLayout
        android:id="@+id/floating_view"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_gravity="top">
	    
        <Button
        	android:id="@+id/floating_button"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:background="@drawable/floating_button_teal"
            android:text="@string/next_op"
            android:visibility="invisible"/>
        
        <Button
        	android:id="@+id/chat_button"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:background="@drawable/floating_button_teal"
            android:text="@string/chat"
            android:visibility="invisible"/>
	</FrameLayout>
</FrameLayout>