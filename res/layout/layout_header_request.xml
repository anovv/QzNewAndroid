<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	android:orientation="vertical">
   	
	<LinearLayout 
	    android:id="@+id/layout_header_view"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:padding="5dp"
	    android:background="@drawable/card_go"
   		android:orientation="vertical" >
	    
		<TextView
		    android:id="@+id/header_themes_name"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textColor="@color/Gray"
		    android:layout_margin="3dp"
		    android:textSize="@dimen/header_themes_name_textsize"/>
		
		<TextView
		    android:id="@+id/header_themes_themename"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textColor="#fff1693c"
		    android:layout_margin="3dp"
		    android:textSize="@dimen/header_themes_themename_textsize"/>
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    
		    <Button
		        android:id="@+id/header_themes_accept_button"
		        android:layout_weight="1"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_margin="10dp"
			    android:background="@drawable/main_button"
			    android:textColor="@color/White"
		   		android:textSize="@dimen/header_themes_accept_textsize"
			    android:text="@string/header_themes_accept_text"/>
		    
		    <Button
		        android:id="@+id/header_themes_decline_button"
		        android:layout_weight="1"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_margin="10dp"
			    android:background="@drawable/main_button"
			    android:textColor="@color/White"
		    	android:textSize="@dimen/header_themes_decline_textsize"
			    android:text="@string/header_themes_decline_text"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>